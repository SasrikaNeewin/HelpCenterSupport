<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity6">

    <ImageView
        android:id="@+id/pgblur1"
        android:layout_width="429dp"
        android:layout_height="763dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/delete_message" />

    <Button
        android:id="@+id/delebtn1"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="100dp"
        android:background="#ED0909"
        android:text="DELETE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pgblur1" />

    <Button
        android:id="@+id/cancelbtn1"
        android:layout_width="103dp"
        android:layout_height="49dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="24dp"
        android:background="#686565"
        android:text="CANCEL"
        app:layout_constraintEnd_toStartOf="@+id/delebtn1"
        app:layout_constraintTop_toTopOf="@+id/pgblur1" />
</androidx.constraintlayout.widget.ConstraintLayout>